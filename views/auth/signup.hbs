<h2>Sign Up</h2>
<form action="/signup" method="POST">

  <label>Email</label>
  <input name="email" type="email" placeholder="Enter your email">
  <label> Username</label>
  <input name="username" type="text" placeholder="Enter your name">
  <label>Password</label>
  <input name="password" type="password" placeholder="Enter your Password">
  <div class="select-city-container">
    
    <label> Select your city </label>
    <select name="city">
      <option> Amsterdam </option>
      <option> Berlin </option>
      <option> Lisbon </option>
      <option> Madrid </option>
      <option> Paris </option>
    </select>
  </div>
  <br>
  <div class "roles">
  <label> Select "Rider" if you want to rent a scooter </label>
   <label> Select "Company" if you want to offer your scooter</label>
  <select name = "role">
    <option value = "rider"> Rider </option>
    <option value = "company"> Company </option>
  </select>
  </div>
  <br>
  {{!-- <input type="checkbox" name = 'rider' value = 'true'>
  <label for = 'rider'> Only check if a rider </label> --}}
  
  <button type="submit">Sign Up</button>
</form>

{{!-- Conditionally render the msg --}}
{{#if msg}}
<div class="error">{{msg}}</div>
{{/if}}

