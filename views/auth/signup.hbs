<form action="/signup" method="POST">

  <label>Email</label>
  <input name="email" type="email" placeholder="Enter your email">
  <label> Username</label>
  <input name="username" type="text" placeholder="Enter your name">
  <label>Password</label>
  <input name="password" type="password" placeholder="Enter your Password">
  <div class="select-city-container">
    
    <select name="city">
      <option> Choose your city </option>
      <option> Amsterdam </option>
      <option> Berlin </option>
      <option> Lisbon </option>
      <option> Madrid </option>
      <option> Paris </option>
    </select>
  </div>
  <input type="checkbox" name = 'rider' value = 'true'>
  <label for = 'rider'> Rider </label>
  <input type="checkbox" name = 'company' value = 'true'>
  <label for = 'company'> Company </label>
  <button type="submit" class="btn-secondary">Sign Up</button>
</form>

{{!-- Conditionally render the msg --}}
{{#if msg}}
<div class="error">{{msg}}</div>
{{/if}}

