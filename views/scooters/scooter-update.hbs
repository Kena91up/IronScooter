

<h2>Update the Scooter</h2>

<form method="POST" action="/scooters/{{scooter._id}}/edit">
  
    <label >Brand Name:</label>
    <input value="{{scooter.brandName}}" name="sbrandname" type="text" >

    <label >Max. Speed:</label>
    <input value="{{scooter.maxSpeed}}" name="smaxspeed" type="number" >
  
    <label >Max. Range:</label>
    <input value="{{scooter.maxRange}}" name="smaxrange" type="number" >
 
    <label >Model Year:</label>
    <input value="{{scooter.modelYear}}" name="smodelyear" type="number" >
 
    <label >Max.Load Capacity:</label>
    <input value="{{scooter.maxLoadCapacity}}" name="smaxloadcapacity" type="number">
 
    <label for="photo" class="form-label">Picture:</label>
    <input value="{{scooter.img}}" name="simg" type="file" class="form-control">
 

  <button type="submit" class="submit-btn">Edit Scooter</button>
</form> 

